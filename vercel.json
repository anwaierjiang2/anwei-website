{
  "version": 2,
  "build": {
    "command": "npm run build",
    "outputDirectory": "client/build",
    "installCommand": "npm install && cd client && npm install --legacy-peer-deps"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/vercel-adapter.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "1"
  }
}