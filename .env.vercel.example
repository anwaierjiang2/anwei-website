# Vercel 部署环境变量配置模板
# 请在 Vercel 控制台中设置这些环境变量

# 基础配置
NODE_ENV=production
PORT=5000
VERCEL=1

# 数据库配置 (建议使用 MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/anwei?retryWrites=true&w=majority

# JWT 密钥 (请生成安全的随机字符串)
JWT_SECRET=your_secure_jwt_secret_here

# 邮件配置
EMAIL_HOST=smtp.163.com
EMAIL_PORT=465
EMAIL_USER=your_email@163.com
EMAIL_PASS=your_email_password

# 通义千问 API 配置
QWEN_API_KEY=your_qwen_api_key
QWEN_API_URL=https://dashscope.aliyuncs.com/api/v1

# 管理员账号
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=secure_admin_password

# 生产环境安全设置
FORCE_HTTPS=true
LOG_LEVEL=info
MAX_UPLOAD_SIZE=20
CACHE_DURATION=3600

# Vercel 特定配置
# 注意: Vercel 不支持 WebSocket，实时功能需要使用第三方服务
DISABLE_WEBSOCKET=true