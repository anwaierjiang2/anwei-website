{
  "build": {
    "command": "npm install && cd client && npm install --legacy-peer-deps && npm run build",
    "outputDir": "client/build"
  },
  "run": {
    "command": "node start-production.js",
    "port": 5000
  },
  "services": [
    {
      "name": "mongodb",
      "type": "mongodb",
      "version": "5.0"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "5000"
  },
  "routes": [
    {
      "path": "/",
      "dest": "client/build"
    },
    {
      "path": "/api",
      "dest": "http://localhost:5000"
    }
  ]
}